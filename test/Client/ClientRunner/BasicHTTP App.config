<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="spring">
      <section name="context" type="Spring.Context.Support.ContextHandler, Spring.Core"/>
      <section name="objects" type="Spring.Context.Support.DefaultSectionHandler, Spring.Core" />
    </sectionGroup>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging" />
    </sectionGroup>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>

  <spring>

    <context>
      <resource uri="config://spring/objects"/>
    </context>

    <objects xmlns="http://www.springframework.net" >

      <object id="Builder" type="ObjectBuilder.SpringFramework.Builder, ObjectBuilder.SpringFramework" />

      <object id="Binding" type="System.ServiceModel.BasicHttpBinding, System.ServiceModel, Version=3.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
        <constructor-args name="security" value="BasicHttpSecurityMode.None" />
      </object>

      <object id="Transport" type="NServiceBus.Unicast.Transport.WCF.GenericTransport, NServiceBus.Unicast.Transport.WCF">
        <constructor-arg name="binding" ref="Binding" />
        <constructor-arg name="baseAddress" value="http://localhost:8255/client/" />
        <constructor-arg name="address" value="bus.svc" />
        <constructor-arg name="xmlObjectSerializer" value="NServiceBus.Unicast.Transport.WCF.XmlSerializerWrapper, NServiceBus.Unicast.Transport.WCF" />
      </object>

      <object id="Bus" type="NServiceBus.Unicast.UnicastBus, NServiceBus.Unicast">
        <property name="Builder" ref="Builder" />
        <property name="Transport" ref="Transport" />
        <property name="ImpersonateSender" value="false" />

        <property name="MessageOwners">
          <dictionary>
            <entry key="Messages" value="http://localhost:8254/server/bus.svc"/>
          </dictionary>
        </property>

        <property name="MessageHandlerAssemblies">
          <list>
            <value>Client</value>
          </list>
        </property>

      </object>

      <object type="Client.EventMessageHandler, Client" >
        <property name="Bus" ref="Bus" />
      </object>

      <object type="Client.WFResponseHandler, Client" >
      </object>

    </objects>

  </spring>

  <common>
    <logging>
      <factoryAdapter type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, Common.Logging.Log4net">
        <arg key="configType" value="INLINE" />
      </factoryAdapter>
    </logging>
  </common>

  <log4net debug="false">
    <appender name="console" type="log4net.Appender.ConsoleAppender" >
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] &lt;%X{auth}&gt; - %m%n" />
      </layout>
    </appender>

    <root>
      <level value="ALL" />
      <appender-ref ref="console" />
    </root>

    <logger name="Spring">
      <level value="ERROR" />
    </logger>

  </log4net>

</configuration>
