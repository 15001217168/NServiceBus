<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="spring">
      <section name="context" type="Spring.Context.Support.ContextHandler, Spring.Core"/>
      <section name="objects" type="Spring.Context.Support.DefaultSectionHandler, Spring.Core" />
    </sectionGroup>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging" />
    </sectionGroup>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>

  <spring>

    <context>
      <resource uri="config://spring/objects"/>
    </context>

    <objects xmlns="http://www.springframework.net" >

      <object id="Builder" type="ObjectBuilder.SpringFramework.Builder, ObjectBuilder.SpringFramework" />

      <object id="Transport" type="NServiceBus.Unicast.Transport.Msmq.MsmqTransport, NServiceBus.Unicast.Transport.Msmq">
        <property name="InputQueue" value="FormatName:DIRECT=OS:localhost\private$\messagebus" />
        <property name="UseXmlSerialization" value="false" />
        <property name="NumberOfWorkerThreads" value="1" />
        <property name="IsTransactional" value="true" />
        <property name="PurgeOnStartup" value="false" />
        <property name="ErrorQueue" value="FormatName:DIRECT=OS:localhost\private$\error" />
      </object>

      <object id="SubscriptionStorage" type="NServiceBus.Unicast.Subscriptions.Msmq.MsmqSubscriptionStorage, NServiceBus.Unicast.Subscriptions.Msmq">
        <property name="Queue" value="FormatName:DIRECT=OS:localhost\private$\subscriptions" />
      </object>

      <object id="Bus" type="NServiceBus.Unicast.UnicastBus, NServiceBus.Unicast">
        <property name="Builder" ref="Builder" />
        <property name="Transport" ref="Transport" />
        <property name="SubscriptionStorage" ref="SubscriptionStorage" />
        <property name="ImpersonateSender" value="false" />

        <property name="MessageOwners">
          <dictionary>
            <entry key="Messages" value="FormatName:DIRECT=OS:localhost\private$\messagebus"/>
            <entry key="Messages.PartnerQuoteMessage, Messages" value="FormatName:DIRECT=OS:localhost\private$\distributorDataBus" />
          </dictionary>
        </property>

        <property name="MessageHandlerAssemblies">
          <list>
            <value>NServiceBus.Saga</value>
            <value>ServerFirst</value>
            <value>Server</value>
          </list>
        </property>

      </object>

      <object type="NServiceBus.Saga.SagaMessageHandler, NServiceBus.Saga"  singleton="false">
        <property name="Builder" ref="Builder" />
        <property name="Bus" ref="Bus" />
      </object>

      <object id="Reminder" type="NServiceBus.Saga.Reminder, NServiceBus.Saga">
        <property name="Bus" ref="Bus" />
      </object>

      <object id="SagaPersister" type="InMemorySagaPersister.InMemorySagaPersister, InMemorySagaPersister" />


      <object type="Server.CommandMessageHandler, Server"  singleton="false">
        <property name="Bus" ref="Bus" />
      </object>

      <object type="ServerFirst.HandleCommandFirstMessageHandler, ServerFirst"  singleton="false">
        <property name="Bus" ref="Bus" />
      </object>

      <object type="Server.Saga, Server" singleton="false">
        <property name="Reminder" ref="Reminder" />
        <property name="Bus" ref="Bus" />
        <property name="NumberOfPartners" value="1" />
        <property name="TimeoutInSeconds" value="10" />
      </object>
      

    </objects>

  </spring>

  <common>
    <logging>
      <factoryAdapter type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, Common.Logging.Log4net">
        <arg key="configType" value="INLINE" />
      </factoryAdapter>
    </logging>
  </common>

  <log4net debug="false">
    <appender name="console" type="log4net.Appender.ConsoleAppender" >
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] &lt;%X{auth}&gt; - %m%n" />
      </layout>
    </appender>
    
    <root>
      <level value="DEBUG" />
      <appender-ref ref="console" />
    </root>

    <logger name="Spring">
      <level value="ERROR" />
      <appender-ref ref="console" />
    </logger>

    <!--<logger name="NServiceBus.Unicast.UnicastBus">
      <level value="DEBUG" />
      <appender-ref ref="console" />
    </logger>-->

  </log4net>

</configuration>
