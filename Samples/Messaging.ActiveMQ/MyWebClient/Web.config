<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="MessageForwardingInCaseOfFaultConfig" type="NServiceBus.Config.MessageForwardingInCaseOfFaultConfig, NServiceBus.Core"/>
    <section name="UnicastBusConfig" type="NServiceBus.Config.UnicastBusConfig, NServiceBus.Core"/>
  </configSections>
  <connectionStrings>
    <add name="NServiceBus/Transport" connectionString="activemq:tcp://localhost:61616"/>
  </connectionStrings>
  <!-- in order to configure remote endpoints use the format: "queue@machine" 
       input queue must be on the same machine as the process feeding off of it.
       error queue can (and often should) be on a different machine.
  -->
  <MessageForwardingInCaseOfFaultConfig ErrorQueue="error"/>
  <UnicastBusConfig>
    <MessageEndpointMappings>
      <add Assembly="MyMessages" Namespace="MyMessages.Commands" Endpoint="MyServer"/>
      <add Assembly="MyMessages" Type="MyMessages.Events.OrderIsReady" Endpoint="MySubscriber"/>
      <add Assembly="MyMessages" Type="MyMessages.Events.OrderCancelled" Endpoint="MyServer"/>
      <add Assembly="MyMessages" Type="MyMessages.Events.OrderPlaced" Endpoint="MyServer"/>
    </MessageEndpointMappings>
  </UnicastBusConfig>
  <system.web>
    <compilation debug="true" targetFramework="4.0"/>
  </system.web>
</configuration>
