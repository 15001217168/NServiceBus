<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="spring">
      <section name="context" type="Spring.Context.Support.ContextHandler, Spring.Core"/>
      <section name="objects" type="Spring.Context.Support.DefaultSectionHandler, Spring.Core" />
    </sectionGroup>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging" />
    </sectionGroup>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>

  <spring>

    <context>
      <resource uri="config://spring/objects"/>
    </context>

    <objects xmlns="http://www.springframework.net" >

      <object id="Builder" type="ObjectBuilder.SpringFramework.Builder, ObjectBuilder.SpringFramework" />

      <object id="Transport" type="NServiceBus.Multicast.Transport.Udp.UdpTransport, NServiceBus.Multicast.Transport.Udp">
        <property name="NumberOfWorkerThreads" value="1" />
        <property name="LocalAddress" value="192.168.1.2" />
        <property name="Port" value="11004" />
      </object>

      <object id="Bus" type="NServiceBus.Multicast.Bus, NServiceBus.Multicast">
        <property name="Builder" ref="Builder" />
        <property name="Transport" ref="Transport" />

        <property name="MessageOwners">
          <dictionary>
            <entry key="Messages" value="234.5.6.11"/>
            <entry key="Messages.PartnerQuoteMessage, Messages" value="234.5.6.12" />
          </dictionary>
        </property>

        <property name="MessageHandlerAssemblies">
          <list>
            <value>Client</value>
          </list>
        </property>

      </object>

      <object type="Client.EventMessageHandler, Client" >
        <property name="Bus" ref="Bus" />
      </object>

      <object type="Client.PriceQuoteResponseHandler, Client" >
      </object>

    </objects>

  </spring>

  <common>
    <logging>
      <factoryAdapter type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, Common.Logging.Log4net">
        <arg key="configType" value="INLINE" />
      </factoryAdapter>
    </logging>
  </common>

  <log4net debug="false">
    <appender name="console" type="log4net.Appender.ConsoleAppender" >
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] &lt;%X{auth}&gt; - %m%n" />
      </layout>
    </appender>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="console" />
    </root>

    <logger name="Spring">
      <level value="ERROR" />
      <appender-ref ref="console" />
    </logger>

    <!--<logger name="NServiceBus.Unicast.UnicastBus">
      <level value="DEBUG" />
      <appender-ref ref="console" />
    </logger>-->

  </log4net>

</configuration>
