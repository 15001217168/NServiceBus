<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="NServiceBusProxyConfig" type="NServiceBus.Proxy.Host.NServiceBusProxyConfig, NServiceBus.Proxy.Host" />
    <section name="MsmqSubscriptionStorageConfig" type="NServiceBus.Config.MsmqSubscriptionStorageConfig, NServiceBus" />
    <section name="DbSubscriptionStorageConfig" type="NServiceBus.Config.DbSubscriptionStorageConfig, NServiceBus"/>
    
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, NServiceBus" />
    </sectionGroup>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>

  <NServiceBusProxyConfig 
    RemoteServer="messagebus" 
  />
  

  <MsmqSubscriptionStorageConfig Queue="proxy_subscriptions" />

  <DbSubscriptionStorageConfig
ProviderInvariantName="System.Data.SqlClient"
ConnectionString="Data Source=localhost;Initial Catalog=Test;Integrated Security=True"
    />

  <appSettings>
    <add key="ExternalQueue" value="external"/>
    <add key="InternalQueue" value="internal"/>
    <add key="ErrorQueue" value="error"/>
    <add key="NumberOfWorkerThreads" value="1"/>
    <add key="MaxRetries" value="5"/>
  </appSettings>

  <common>
    <logging>
      <factoryAdapter type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, NServiceBus">
        <arg key="configType" value="INLINE" />
      </factoryAdapter>
    </logging>
  </common>

  <log4net debug="false">
    <appender name="console" type="log4net.Appender.ConsoleAppender" >
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] &lt;%X{auth}&gt; - %m%n" />
      </layout>
    </appender>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="console" />
    </root>


  </log4net>

</configuration>
