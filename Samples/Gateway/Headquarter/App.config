<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="MessageForwardingInCaseOfFaultConfig" type="NServiceBus.Config.MessageForwardingInCaseOfFaultConfig, NServiceBus.Core" />
    <section name="GatewayConfig" type="NServiceBus.Config.GatewayConfig, NServiceBus.Core" />
  </configSections>

  <MessageForwardingInCaseOfFaultConfig ErrorQueue="error"/>

  <GatewayConfig>
    <Sites>
      <Site Key="SiteA" Address="http://localhost/NServiceBus/Gateways/SiteA/" ChannelType="Http"/>
      <Site Key="SiteB" Address="http://localhost/NServiceBus/Gateways/SiteB/" ChannelType="Http"/>
    </Sites>
  </GatewayConfig>
</configuration>