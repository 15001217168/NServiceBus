<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="spring">
      <section name="context" type="Spring.Context.Support.ContextHandler, Spring.Core"/>
      <section name="objects" type="Spring.Context.Support.DefaultSectionHandler, Spring.Core" />
    </sectionGroup>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging" />
    </sectionGroup>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>

  <spring>

    <context>
      <resource uri="config://spring/objects"/>
    </context>

    <objects xmlns="http://www.springframework.net" >

      <object id="Builder" type="ObjectBuilder.SpringFramework.Builder, ObjectBuilder.SpringFramework" />

      <object id="MessageBusTransport" type="NServiceBus.Unicast.Transport.Msmq.MsmqTransport, NServiceBus.Unicast.Transport.Msmq">
        <property name="InputQueue" value="distributorDataBus" />
        <property name="NumberOfWorkerThreads" value="1" />
        <property name="IsTransactional" value="true" />
        <property name="PurgeOnStartup" value="false" />
        <property name="SkipDeserialization" value="true" />
        <property name="ErrorQueue" value="error" />
      </object>

      <object id="ControlTransport" type="NServiceBus.Unicast.Transport.Msmq.MsmqTransport, NServiceBus.Unicast.Transport.Msmq">
        <property name="InputQueue" value="distributorControlBus" />
        <property name="UseXmlSerialization" value="false" />
        <property name="NumberOfWorkerThreads" value="1" />
        <property name="IsTransactional" value="true" />
        <property name="PurgeOnStartup" value="false" />
        <property name="ErrorQueue" value="error" />
      </object>

      <object id="ControlBus" type="NServiceBus.Unicast.UnicastBus, NServiceBus.Unicast">
        <property name="Builder" ref="Builder" />
        <property name="Transport" ref="ControlTransport" />

        <property name="MessageOwners">
          <dictionary>
            <entry key="NServiceBus.Grid.Messages" value="distributorControlBus"/>
          </dictionary>
        </property>

        <property name="MessageHandlerAssemblies">
          <list>
            <value>NServiceBus.Grid.MessageHandlers</value>
            <value>NServiceBus.Unicast.Distributor</value>
          </list>
        </property>

      </object>

      <object id="WorkerManager" type="MsmqWorkerAvailabilityManager.MsmqWorkerAvailabilityManager, MsmqWorkerAvailabilityManager">
        <property name="StorageQueue" value="distributorStorage" />
      </object>

      <object id="Distributor" type="NServiceBus.Unicast.Distributor.Distributor, NServiceBus.Unicast.Distributor">
        <property name="MessageBusTransport" ref="MessageBusTransport" />
        <property name="ControlBus" ref="ControlBus" />
        <property name="WorkerManager" ref="WorkerManager" />
      </object>

      <object type="NServiceBus.Unicast.Distributor.ReadyMessageHandler, NServiceBus.Unicast.Distributor">
        <property name="Bus" ref="ControlBus" />
        <property name="WorkerManager" ref="WorkerManager" />
      </object>

      <object type="NServiceBus.Grid.MessageHandlers.GetNumberOfWorkerThreadsMessageHandler, NServiceBus.Grid.MessageHandlers">
        <property name="Bus" ref="ControlBus" />
        <property name="Transport" ref="MessageBusTransport" />
      </object>

      <object type="NServiceBus.Grid.MessageHandlers.ChangeNumberOfWorkerThreadsMessageHandler, NServiceBus.Grid.MessageHandlers">
        <property name="UnicastBus" ref="ControlBus" />
        <property name="Transport" ref="MessageBusTransport" />
      </object>

    </objects>

  </spring>

  <common>
    <logging>
      <factoryAdapter type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, Common.Logging.Log4net">
        <arg key="configType" value="INLINE" />
      </factoryAdapter>
    </logging>
  </common>


  <log4net debug="false">
    <appender name="console" type="log4net.Appender.ConsoleAppender" >
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] &lt;%X{auth}&gt; - %m%n" />
      </layout>
    </appender>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="console" />
    </root>

    <logger name="Spring">
      <level value="ERROR" />
    </logger>

  </log4net>

</configuration>
