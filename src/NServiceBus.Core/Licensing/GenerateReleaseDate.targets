<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <UsingTask TaskName="GenerateReleaseDate" TaskFactory="CodeTaskFactory" AssemblyFile="$(MSBuildToolsPath)\Microsoft.Build.Tasks.Core.dll">

    <ParameterGroup>
      <IntermediateOutputPath Required="true" />
      <OriginalCommitDateAndTime />
      <CurrentCommitDate Required="true" />
      <GeneratedFilePath Output="true" />
    </ParameterGroup>

    <Task>
      <Code Type="Fragment" Language="cs">
        <![CDATA[
        var originalCommitDate = CurrentCommitDate;

        if (!string.IsNullOrWhiteSpace(OriginalCommitDateAndTime))
        {
            originalCommitDate = DateTimeOffset.Parse(OriginalCommitDateAndTime).ToString("yyyy-MM-dd");
        }

        GeneratedFilePath = Path.Combine(IntermediateOutputPath, "ReleaseDate.g.cs");

        File.WriteAllText(GeneratedFilePath, String.Format("[assembly: NServiceBus.ReleaseDate(\"{0}\", \"{1}\")]", originalCommitDate, CurrentCommitDate));
        ]]>
      </Code>
    </Task>

  </UsingTask>

  <Target Name="GenerateReleaseDate" DependsOnTargets="GetVersion" BeforeTargets="CoreCompile">

    <Exec Command="git show --format=%%ci $(GitVersion_Major).$(GitVersion_Minor).0" WorkingDirectory="$(MSBuildProjectDirectory)" ConsoleToMSBuild="true" Condition="$(GitVersion_Patch) != 0">
      <Output TaskParameter="ConsoleOutput" PropertyName="OriginalCommitDateAndTime" />
    </Exec>

    <GenerateReleaseDate IntermediateOutputPath="$(IntermediateOutputPath)" OriginalCommitDateAndTime="$(OriginalCommitDateAndTime)" CurrentCommitDate="$(GitVersion_CommitDate)">
      <Output TaskParameter="GeneratedFilePath" PropertyName="GeneratedReleaseDateFilePath" />
    </GenerateReleaseDate>

    <ItemGroup>
      <Compile Include="$(GeneratedReleaseDateFilePath)" />
    </ItemGroup>

  </Target>

</Project>